{
    "name": "fccn/webapp-skeleton",
    "description": "A Slim Framework skeleton application developed by fccn for rapid development",
    "keywords": ["fccn", "framework", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Costa",
            "email": "paulo.costa@fccn.pt"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.3",
        "twig/extensions": "^1.5",
        "jswhetstone/twig-extension": "dev-master",
        "fccn/webapp-tools/translate": "dev-master",
        "components/jquery": "^3.2",
        "components/bootstrap": "^3.3",
        "components/bootstrap-default": "^3.3",
        "eonasdan/bootstrap-datetimepicker": "^4.17"
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "codeception/verify": "*"
    },
    "autoload":{
      "psr-4": {
        "Fccn\\Lib\\": "app/lib",
        "Fccn\\WsUtils\\": "app/wsutils"
      }
    },
    "autoload-dev": {
        "psr-4": {
            "Fccn\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:9090 -t html/",
        "test": "codecept"
    }

}
