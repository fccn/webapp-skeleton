{
    "name": "fccn/webapp-skeleton",
    "description": "A Slim Framework skeleton application developed by fccn for rapid development",
    "keywords": ["fccn", "framework", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Paulo Costa",
            "email": "paulo.costa@fccn.pt"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "slim/twig-view": "^2.3",
        "twig/extensions": "^1.5",
        "components/jquery": "^3.2",
        "components/bootstrap": "^3.3",
        "components/bootstrap-default": "^3.3",
        "eonasdan/bootstrap-datetimepicker": "^4.17",
        "components/font-awesome": "^4.7",
        "jswhetstone/twig-extension": "dev-master",
        "fccn/webapp-tools-translate": "^1.1",
        "fccn/webapp-tools-common": "^1.0",
        "fccn/webapp-tools-web-components": "dev-master",
        "fccn/webapp-tools-common-js": "dev-master"
    },
    "require-dev": {
        "codeception/codeception": "^2.3",
        "codeception/verify": "*"
    },
    "autoload":{
      "psr-4": {
        "Fccn\\WebComponents\\": "lib/web_components"
      }
    },
    "autoload-dev": {
        "psr-4": {
            "Fccn\\Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S 0.0.0.0:9090 -t html/",
        "test": "codecept"
    },
    "repositories": [
          {
              "type": "vcs",
              "url": "git@gitlab.fccn.pt:PCosta/wt-common-js.git"
          },
          {
              "type": "vcs",
              "url": "git@gitlab.fccn.pt:PCosta/wt-web-components.git"
          }
    ]

}
